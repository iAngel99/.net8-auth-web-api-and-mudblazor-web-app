
<MudList Clickable="true">
    <MudListItem Button="true" Href="/">
        <MudIcon Icon="@Icons.Material.Filled.Home" />
        Home
    </MudListItem>
    <AuthorizeView>
        <Authorized>
            <MudListItem Button="true" Href="weather">
                <MudIcon Icon="@Icons.Material.Filled.List" />
                Weather
            </MudListItem>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles="Administrator">
        <Authorized>
            <MudListItem Button="true" Href="manageusers">
                <MudIcon Icon="@Icons.Material.Filled.SupervisedUserCircle" />
                Gestionar Usuarios
            </MudListItem>
        </Authorized>
    </AuthorizeView>

</MudList>


