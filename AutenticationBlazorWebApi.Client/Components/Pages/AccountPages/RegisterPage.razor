@page "/identity/account/register"
@layout AuthenticationLayout


<div class="centered-container">
    <div class="container-color">
        <EditForm Model="@User" OnValidSubmit="HandleRegistration">
            <DataAnnotationsValidator />
            <MudCard Class="mudContainer" Elevation="100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <div class="d-flex flex-column align-items-center">
                            <MudText Typo="Typo.h4" Class="mb-3">Register</MudText>
                            <MudImage Src="/logos/register.webp" Alt="Login Icon" Elevation="25" Class="rounded-lg" Style="width: 75px; height: 75px;" />
                        </div>
                    </CardHeaderContent>
                </MudCardHeader>

                <MudCardContent>
                    <MudTextField Label="Nombre" @bind-Value="User.FirstName" Class="mt-3" 
                                  For="@(() => User.FirstName)">
                    </MudTextField>
                    <MudTextField Label="Apellido" @bind-Value="User.LastName" Class="mt-3"
                                  For="@(() => User.LastName)">
                    </MudTextField>
                    <MudTextField Label="Email" @bind-Value="User.Email" Class="mt-3"
                                  For="@(() => User.Email)">
                    </MudTextField>
                    <MudTextField Label="Contraseña" @bind-Value="User.Password" InputType="InputType.Password" Class="mt-3"
                                  For="@(() => User.Password)">
                    </MudTextField>
                    <MudTextField Label="Confirmar Contraseña" @bind-Value="User.ConfirmPassword" Class="mt-3"
                                  InputType="InputType.Password" For="@(() => User.ConfirmPassword)">
                    </MudTextField>
                </MudCardContent>
                <MudCardActions>
                    <MudText Align="Align.Center" Class="mb-2">
                        Already have an account?
                        <MudLink Href="/identity/account/login">Sign in</MudLink>
                    </MudText>
                    <MudSpacer />
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" 
                               Class="mt-auto" Style="border-radius: 10%;">Submit</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </div>
</div>
