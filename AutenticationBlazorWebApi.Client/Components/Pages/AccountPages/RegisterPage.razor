@page "/identity/account/register"
@layout AuthenticationLayout


<div class="centered-container">
    <div class="container-color">
        <EditForm Model="@User" OnValidSubmit="HandleRegistration">
            <DataAnnotationsValidator />
            <MudCard Class="mudContainer" Elevation="100">
                <MudCardHeader>
                    <CardHeaderContent>
                        <div class="d-flex flex-column align-items-center">
                            <MudText Typo="Typo.h4" Class="mb3" Color="Color.Info">Register</MudText>
                            <MudImage Src="/logos/register.webp" Alt="Login Icon" Elevation="25" Class="rounded-lg" Style="width: 75px; height: 75px;" />
                        </div>
                    </CardHeaderContent>
                </MudCardHeader>

                <MudCardContent Class="mudLightblue">
                    <MudTextField Label="Nombre" @bind-Value="User.FirstName" Class="mt3 whiteLabel"
                                  For="@(() => User.FirstName)">
                    </MudTextField>
                    <MudTextField Label="Apellido" @bind-Value="User.LastName" Class="mt3 whiteLabel"
                                  For="@(() => User.LastName)">
                    </MudTextField>
                    <MudTextField Label="Email" @bind-Value="User.Email" Class="mt3 whiteLabel"
                                  For="@(() => User.Email)">
                    </MudTextField>
                    <MudTextField Label="Contraseña" @bind-Value="User.Password" Class="mt3 whiteLabel"
                                  For="@(() => User.Password)" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon"
                                  OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" AdornmentColor="Color.Info">
                    </MudTextField>
                    <MudTextField Label="Confirmar Contraseña" @bind-Value="User.ConfirmPassword" Class="mt3 whiteLabel" Adornment="Adornment.End"
                                  For="@(() => User.ConfirmPassword)" InputType="@PasswordConfirmInput"  AdornmentIcon="@PasswordConfirmInputIcon" 
                                  OnAdornmentClick="ButtonShowclick" AdornmentAriaLabel="Show Password" AdornmentColor="Color.Info">
                    </MudTextField>
                </MudCardContent>
                <MudCardActions>
                    <MudText Align="Align.Center" Class="mb2 cuestion-color">
                        Already have an account?
                        <MudLink Href="/identity/account/login">Sign in</MudLink>
                    </MudText>
                    <MudSpacer />
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" 
                               Class="mtauto" Style="border-radius: 10%;">Submit</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </div>
</div>
